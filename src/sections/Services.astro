<section class="bg-white dark:bg-gray-900 py-16" id="servicios">
  <div class="max-w-[1200px] mx-auto px-4 md:px-10">
    <div class="mb-10 text-center md:text-left">
      <h2 class="text-3xl font-bold tracking-tight mb-2">Nuestros Servicios</h2>
      <div class="h-1 w-20 bg-primary mx-auto md:mx-0"></div>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4">
      <!-- Service 1 -->
      <div
        class="group p-6 rounded-xl border border-[#dadfe7] dark:border-gray-700 bg-white dark:bg-gray-800 hover:border-primary transition-all hover:shadow-md cursor-default"
      >
        <div class="text-primary mb-4">
          <span class="material-symbols-outlined text-4xl">smartphone</span>
        </div>
        <h3 class="text-lg font-bold mb-2">Celulares y Tablets</h3>
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          Reparación de pantallas, baterías y fallas de carga.
        </p>
      </div>
      <!-- Service 2 -->
      <div
        class="group p-6 rounded-xl border border-[#dadfe7] dark:border-gray-700 bg-white dark:bg-gray-800 hover:border-primary transition-all hover:shadow-md cursor-default"
      >
        <div class="text-primary mb-4">
          <span class="material-symbols-outlined text-4xl">laptop_mac</span>
        </div>
        <h3 class="text-lg font-bold mb-2">Notebooks</h3>
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          Mantenimiento, cambio de discos SSD y teclados.
        </p>
      </div>
      <!-- Service 3 -->
      <div
        class="group p-6 rounded-xl border border-[#dadfe7] dark:border-gray-700 bg-white dark:bg-gray-800 hover:border-primary transition-all hover:shadow-md cursor-default"
      >
        <div class="text-primary mb-4">
          <span class="material-symbols-outlined text-4xl">print</span>
        </div>
        <h3 class="text-lg font-bold mb-2">Impresoras</h3>
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          Limpieza de cabezales, service y sistemas de tinta.
        </p>
      </div>
      <!-- Service 4 -->
      <div
        class="group p-6 rounded-xl border border-[#dadfe7] dark:border-gray-700 bg-white dark:bg-gray-800 hover:border-primary transition-all hover:shadow-md cursor-default"
      >
        <div class="text-primary mb-4">
          <span class="material-symbols-outlined text-4xl">sports_esports</span>
        </div>
        <h3 class="text-lg font-bold mb-2">Consolas</h3>
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          Reparación de puertos HDMI, limpieza y joysticks.
        </p>
      </div>
      <!-- Service 5 -->
      <div
        class="group p-6 rounded-xl border border-[#dadfe7] dark:border-gray-700 bg-white dark:bg-gray-800 hover:border-primary transition-all hover:shadow-md cursor-default"
      >
        <div class="text-primary mb-4">
          <span class="material-symbols-outlined text-4xl">coffee_maker</span>
        </div>
        <h3 class="text-lg font-bold mb-2">Electrodomésticos</h3>
        <p class="text-gray-500 dark:text-gray-400 text-sm">
          Arreglo de cafeteras, pavas y fallas eléctricas.
        </p>
      </div>
    </div>
  </div>
</section>
