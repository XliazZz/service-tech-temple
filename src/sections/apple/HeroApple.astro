<section
  class="relative flex min-h-[700px] w-full items-center justify-center bg-white px-6 py-20 lg:px-8"
>
  <div class="absolute inset-0 z-0 h-full w-full overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-r from-black/60 to-transparent z-10"
    >
    </div>
    <div
      class="h-full w-full bg-cover bg-center"
      data-alt="High-quality disassembled iPhone on minimalist workbench"
      style="background-image: url('https://lh3.googleusercontent.com/aida-public/AB6AXuAi9JgJubEdhhhOj9mhZJQ7BkwXvaYkTjfgwzz-xgsga3N1s8Vv7mfS9Rpioe3mh1bYhWqYllKZRVgVmcc9vUGYGHM5YkD1KRXi1w4PH2ycqCozsx6HjH5nO5G-K0fgK5BxKdeC3EU0oH8fIHAEDW3mccKNnqxrfdqFYRgHvTIif77Okq6o_CiECCGJn4D6ed9ZhC2FXz3Qpx67UmSrLfLwj7M7g3ZQIODVN2CAYprVhYMQLR5_xscMV8Am6XpxRZbskKh9pAwxrps');"
    >
    </div>
  </div>
  <div
    class="relative z-20 flex w-full max-w-[1200px] flex-col items-start gap-8"
  >
    <div class="max-w-2xl animate-[fadeIn_0.8s_ease-out]">
      <h1
        class="font-display text-5xl font-bold leading-[1.1] tracking-[-0.02em] text-white drop-shadow-sm md:text-7xl"
      >
        Servicio Técnico<br />Especializado Apple
      </h1>
      <p
        class="mt-6 text-lg font-normal leading-relaxed text-gray-200 md:text-xl"
      >
        Técnicos Certificados. Repuestos Originales. <br
          class="hidden sm:block"
        />
        Expertos en el Ecosistema Apple.
      </p>
      <div class="mt-10 flex flex-col gap-6 sm:flex-row sm:items-center">
        <button
          class="group flex h-12 w-full max-w-[240px] items-center justify-center gap-2 rounded-full bg-primary px-8 text-[15px] font-semibold text-white shadow-lg transition-transform hover:scale-105 hover:bg-[#0071e3] sm:w-auto"
        >
          <span class="material-symbols-outlined !text-[20px]"
            >precision_manufacturing</span
          >
          <span>Programar Diagnóstico</span>
        </button>
        <div
          class="flex items-center gap-4 rounded-full bg-white/10 px-4 py-2 backdrop-blur-md border border-white/10"
        >
          <div class="flex items-center gap-1.5 border-r border-white/20 pr-4">
            <span class="material-symbols-outlined text-green-400 !text-[18px]"
              >verified</span
            >
            <span class="text-[12px] font-medium text-white"
              >Certificado Apple</span
            >
          </div>
          <div class="flex items-center gap-1.5 border-r border-white/20 pr-4">
            <span class="material-symbols-outlined text-blue-400 !text-[18px]"
              >verified_user</span
            >
            <span class="text-[12px] font-medium text-white"
              >Repuestos Originales</span
            >
          </div>
          <div class="flex items-center gap-1.5">
            <span class="material-symbols-outlined text-purple-400 !text-[18px]"
              >lock</span
            >
            <span class="text-[12px] font-medium text-white"
              >Privacidad de Datos</span
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
